<!-- This DrawerLayout has two children at the root  -->
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- This LinearLayout represents the contents of the screen  -->

    <!-- The navigation drawer that comes from the left -->
    <!-- Note that `android:layout_gravity` needs to be set to 'start' -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- The ActionBar displayed at the top -->
                <include
                    layout="@layout/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- The main content view where fragments are loaded -->
                <FrameLayout
                    android:id="@+id/flContent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="250dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="272dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/profileImage"
                                    android:layout_width="250dp"
                                    android:layout_height="120dp"
                                    android:layout_margin="10dp"
                                    android:layout_weight="1"
                                    android:maxHeight="120dp"
                                    android:maxWidth="250dp"
                                    app:srcCompat="@drawable/defaultuser" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/textFName"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/firstname"
                                        android:textColor="@android:color/black"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:id="@+id/textLName"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/lastname"
                                        android:textColor="@android:color/black"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:id="@+id/textMean"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/mean"
                                        android:textColor="@android:color/black"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:id="@+id/textCDL"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/corsodilaurea"
                                        android:textColor="@android:color/black"
                                        android:textSize="18sp" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:textAlignment="center">

                                <Button
                                    android:id="@+id/mailBtn"
                                    android:layout_width="10dp"
                                    android:layout_height="50dp"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    android:background="@android:color/holo_blue_dark"
                                    android:text="Mail"
                                    android:textColor="@android:color/background_light"
                                    android:textSize="18sp" />

                                <Button
                                    android:id="@+id/recorderBtn"
                                    android:layout_width="10dp"
                                    android:layout_height="50dp"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    android:background="@android:color/holo_blue_dark"
                                    android:text="Registra"
                                    android:textColor="@android:color/background_light"
                                    android:textSize="18sp" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Corsi che segui:"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <Button
                                android:id="@+id/modificaElencoCorsi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@android:color/holo_blue_dark"
                                android:text="Modifica"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ListView
                                android:id="@+id/elencoCorsiSeguiti"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentStart="true"
                                android:layout_marginBottom="24dp"
                                android:layout_weight="1"
                                android:choiceMode="singleChoice"
                                android:divider="#005b00"
                                android:dividerHeight="1dp"
                                android:listSelector="@android:color/darker_gray"
                                android:scrollbarAlwaysDrawVerticalTrack="true"
                                android:scrollbarStyle="insideOverlay" />
                        </RelativeLayout>

                    </LinearLayout>

                </FrameLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.NavigationView
        android:id="@+id/nvView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        app:headerLayout="@layout/nav_header"
        app:itemIconTint="@android:color/transparent"
        app:menu="@menu/drawer_view" />
</android.support.v4.widget.DrawerLayout>